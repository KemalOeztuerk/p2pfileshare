
CC=gcc
CFLAGS=-g -Wall

TARGET = main

SRCDIR = src
OBJDIR = obj
BINDIR = bin

SRCS=$(wildcard $(SRCDIR)/*.c)
OBJS=$(patsubst $(OBJDIR)/%.c,$(OBJDIR)/%.o,$(SRCS))

all: $(BINDIR)/$(TARGET)

$(OBJDIR)/%.o:$(SRCDIR)/%.c | $(OBJDIR)
	$(CC) $(CFLAGS) -c $< -o $@

$(BINDIR/)$(TARGET): $(OBJS) | $(BINDIR)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJDIR):
	mkdir -p $(OBJDIR)

$(BINDIR):
	mkdir -p $(BINDIR)

clean:
	rm $(OBJDIR)/*.o $(TARGET)
